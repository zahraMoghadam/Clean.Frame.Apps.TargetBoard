@model Int32
@{
    ViewData["Title"] = "لیست هدف ها  ";
}

<input type="hidden" value="@Model" asp-for="@Model" id="aspectId" name="aspectId" />
<div class="card border-dark mb-3">
    <div class="card-header">
        <h4 class="card-title">لیست هدف ها<span id="aspect-selected"></span> </h4>
    </div>
    <div class="card-body p-3">
        <div class="d-flex justify-content-end">
            <button id="addTarget" value="اضافه کردن" data-bs-toggle="modal" data-bs-target="#TargetModal" class="btn btn-success"><i class="fas fa-plus m-2"></i>اضافه کردن</button>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="TargetTable" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>نام </th>
                        <th>امتیاز</th>
                        <th> پیشرفت</th>
                        <th> پیغام ها</th>
                        <th>عملیات</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
       
    </div>
</div>

<div class="modal" tabindex="-1" id="TargetModal" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
        </div>
    </div>
</div>